.login {
     width:100%;
     height:100%;
    display: flex;
align-items: center;
justify-content: center;
}
.login-paper{
    height: 380px;
    width: 500px;
    display: inline-block;
    padding: 25px;
}

.login__heading{
        text-align: center;
        font-size: 30px;
        line-height: 0px;
        font-weight: normal;
        margin-top: 30px;
}

.login__content
{
    height:80px;
    padding:0 0 5px 0;
}
.login__btn{
    padding:30px 0px;
}
.error__message {
  display: block;
  color: red;
  margin: 5px;
}