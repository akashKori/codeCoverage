
.result-view{
    border: 1px solid gray;
    height:85vh;
   display: flex;
  flex-flow: column;
}
.result-view__scroll{
    flex: 1 1 auto;
    display: flex;
    flex-direction: column;
    background: white;
    overflow-y: scroll; /* or overflow-y: auto */
}
h4,h5{ margin:5px 0;}
.labresult-topmenu {
  ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  li { display: inline-block; border: 1px solid #ddd; }

  a {
    display: block;
    padding: 6px 12px;
    text-decoration: none;
  }
}
.text-basicInfo{margin:2px 0};