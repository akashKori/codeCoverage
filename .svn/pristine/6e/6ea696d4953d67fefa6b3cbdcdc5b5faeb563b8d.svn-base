
@import '../../../styles/core';

// ----------------------------------------------------------------------

  //  Login Page styles 

// ----------------------------------------------------------------------

//login block
.login {
     @include box-model( 100%,100%,0,0);
     @include display-flex ;
    align-items: center;
    justify-content: center;
    &__paper{
    @include box-model( 500px,380px,25px,0);
    display: inline-block;
} 

  // login heading  
    &__heading{
    @include textalign(30px,30px,center);
        font-weight: normal;
        margin: 15px 0 0 0;
    }
    //login content
    &__content
    {
        height:80px; 
        padding:0 0 5px 0;
    }
    // login button
    &__btn{
    padding:30px 0px;

}

}

