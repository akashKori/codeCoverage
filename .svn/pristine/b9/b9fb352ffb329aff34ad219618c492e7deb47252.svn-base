@import 'base';
@import '~normalize.css/normalize';

// Some best-practice CSS that's useful for most apps
// Just remove them if they're not what you want
html {
  box-sizing: border-box;
}

/// font family
///@type font
$font-stack:   Roboto,sans-serif;

html,
body {
  margin: 0;
  padding: 0;
  height: 100%;
  font-size: 14px;
  font-family: $font-stack;
}

*,
*:before,
*:after {
  box-sizing: inherit;
}
.flt-rt{float: right !important;}
.flt-lt{float:left !important;}
.clearfix{clear:both;}
.full-heght{height:100%}
.full-height{height:100%}
button{
text-transform: capitalize!important;
}
.border-line{border-top:1px solid lightgray; margin:6px 0}
/* Busy Indicator styles*/
.busy-indicator{
     width:100%;
     height:100%;
     min-height: 300px;
    display: flex;
align-items: center;
justify-content: center;
/**
* background-color:#f6f6f6;
**/
}
.busy-indicator__spinner{
    height: 50px;
    width: 50px;
    padding: 25px;
}

/* styles for removing the input x icon in IE Browser*/
input::-ms-clear {
    display: none;
}

input::-ms-reveal {
    display: none;
}

/* 
 #Pagination
*/
.pagination{float:right;}
.pagination__paging-text{
    line-height:23px;
    float:left;
   padding: 0 20px;
   font-size:15px;
}
.pagination__paging-number{
    float: right;
    margin: 5px 8px;
}
